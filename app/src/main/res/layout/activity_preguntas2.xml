<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".PreguntasActivity2">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPreguntas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        android:layout_margin="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewPregunta1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¿El Ecosistema Android es Gratuito?"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btnAlternativa1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verdadero" />

                <Button
                    android:id="@+id/btnAlternativa2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Falso" />

                <Button
                    android:id="@+id/btnAlternativa3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Roma" />

                <Button
                    android:id="@+id/btnAlternativa4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Madrid" />
            </LinearLayout>

            <!-- TextView para feedback -->
            <TextView
                android:id="@+id/textViewFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siguiente"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnMostrarResultados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mostrar Resultados"
                android:textAlignment="center"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
